<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tech.doujiang.launcher.activity.AddContactActivity">

    <LinearLayout
        android:id="@+id/add_contact_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_go_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="@string/add_contact"
            android:gravity="center"
            android:textSize="30sp"/>

        <ImageButton
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/check_mark"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/add_contact_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/contact_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/add_contact"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:text="@string/workspace_contacts"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
          <ImageView
              android:layout_width="20dp"
              android:layout_height="match_parent"
              android:src="@drawable/contact"
              android:scaleType="centerInside"/>
            <EditText
                android:id="@+id/contact_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/name"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/phone"
                android:scaleType="centerInside"/>
            <EditText
                android:id="@+id/contact_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:phoneNumber="true"
                android:hint="@string/number"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/add_number"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:text="@string/add_number"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/email"
                android:scaleType="centerInside"/>
            <EditText
                android:id="@+id/contact_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/email"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <!--<Button-->
            <!--android:id="@+id/add_email"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"/>-->

    </LinearLayout>

</RelativeLayout>
